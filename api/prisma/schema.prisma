datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int           @id @default(autoincrement())
  email     String        @unique
  password  String
  firstName String
  lastName  String
  Comment   Comment[]
  Like      CommentLike[]
  Post      Post[]
  PostLike  PostLike[]
}

model Comment {
  id      Int    @id @default(autoincrement())
  comment String
  post    Post?  @relation(fields: [postId], references: [id])
  postId  Int?
  user    User?  @relation(fields: [userId], references: [id])

  userId Int?
  Like   CommentLike[]
}

model CommentLike {
  id        Int      @id @default(autoincrement())
  comment   Comment? @relation(fields: [commentId], references: [id])
  commentId Int?
  user      User?    @relation(fields: [userId], references: [id])
  userId    Int?

  @@map("Like")
}

model PostLike {
  id     Int  @id @default(autoincrement())
  post   Post @relation(fields: [postId], references: [id])
  postId Int
  user   User @relation(fields: [userId], references: [id])
  userId Int
}

model Post {
  id      Int       @id @default(autoincrement())
  post    String
  user    User?     @relation(fields: [userId], references: [id])
  Comment Comment[]

  userId   Int?
  PostLike PostLike[]
}
